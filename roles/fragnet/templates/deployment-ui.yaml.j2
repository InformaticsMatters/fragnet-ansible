---
kind: Deployment
apiVersion: apps/v1
metadata:
  name: fragnet-ui
  namespace: {{ fs_namespace }}
spec:
  strategy:
    type: Recreate
  selector:
    matchLabels:
      name: fragnet
  template:
    metadata:
      labels:
        name: fragnet
    spec:
      serviceAccountName: {{ fs_sa }}

      # Avoid 'worker' nodes
      # and prefer 'application' nodes
      affinity:
        nodeAffinity:
          requiredDuringSchedulingIgnoredDuringExecution:
            nodeSelectorTerms:
            - matchExpressions:
              - key: informaticsmatters.com/purpose
                operator: NotIn
                values:
                - worker
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 1
            preference:
              matchExpressions:
              - key: informaticsmatters.com/purpose
                operator: In
                values:
                - application

      containers:
      - name: fragnet-ui
        image: {{ fs_flavour_ui_image }}:{{ fs_image_tag }}
{% if fs_image_tag in ['latest', 'stable'] %}
        imagePullPolicy: Always
{% else %}
        imagePullPolicy: IfNotPresent
{% endif %}
        terminationMessagePolicy: FallbackToLogsOnError
        ports:
        - containerPort: 8080
          name: http
        env:
        - name: LOG_ROOT
          value: /logs
{# if fs_remote_services_hostname == '' #}
{#
   We only need to define NEO4J variables
   if this is a co-located ui/services container,
   i.e. the remote services hostname is blank
#}
        - name: NEO4J_SERVER
          value: '{{ graph_service }}.{{ graph_namespace }}.svc'
        - name: NEO4J_USER
          value: {{ graph_user_fact|default('neo4j', true) }}
        - name: NEO4J_PASSWORD
          value: {{ graph_password_fact|default('neo4j', true) }}
{# endif #}
        resources:
          limits:
{% if fs_ui_cpu_limit %}
            cpu: {{ fs_ui_cpu_limit }}
{% endif %}
{% if fs_ui_mem_limit %}
            memory: {{ fs_ui_mem_limit }}
{% endif %}
          requests:
            cpu: {{ fs_ui_cpu_request }}
            memory: {{ fs_ui_mem_request }}
        volumeMounts:
        - mountPath: /usr/local/tomcat/webapps/fragnet-search/META-INF/context.xml
          name: fs-config-map-services
          subPath: context.xml
          readOnly: true
        - mountPath: /usr/local/tomcat/webapps/fragnet-search/WEB-INF/keycloak.json
          name: fs-config-map-services
          subPath: keycloak.json
          readOnly: true
        - mountPath: /usr/local/tomcat/conf/logging.properties
          name: fs-config-map-services
          subPath: logging.properties
        - mountPath: /usr/local/tomcat/webapps/fragnet-search/WEB-INF/web.xml
          name: fs-config-map-services
          subPath: web.xml
          readOnly: true
        - mountPath: /usr/local/tomcat/conf/server.xml
          name: fs-config-map-services
          subPath: server.xml
        - mountPath: /usr/local/tomcat/webapps/ROOT/config.json
          name: fs-config-map-ui
          subPath: config.json
        - mountPath: /usr/local/tomcat/webapps/ROOT/keycloak.json
          name: fs-config-map-ui
          subPath: keycloak.json
      volumes:
      - name: fs-config-map-services
        configMap:
          name: services
      - name: fs-config-map-ui
        configMap:
          name: ui
      imagePullSecrets:
      - name: ui-pull-secret
